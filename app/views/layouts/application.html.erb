<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:html_title) + " - " if content_for?(:html_title) %>Products</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<section class="section">
  <div class="btn-group btn-group-lg" role="group">
      <h1 class="btn btn-secondary"><%= link_to "Shop", root_path %></h1>
      <h1 class="btn btn-secondary"><%= link_to "Categories", categories_path %></h1>
      <h1 class="btn btn-secondary"><%= link_to "Suppliers", manufacturers_path %></h1>
  </div>

  <div class="container">
    <h2 class="title is-2"><%= link_to "Kitchen Ecommerce", root_path %></h2>
  </div>
    <body>
  <%= form_with(url: search_products_path, method: :get, local: true, class: 'mt-5 mb-5') do %>
    <div class="field is-grouped mb-5">
      <div class="control is-expanded">
        <%= text_field_tag(:keywords, nil, class: "input", placeholder: "Search available products") %>
      </div>
      <div class="control">
        <%= submit_tag("Search", class: "button is-info") %>
      </div>
    </div>
  <% end %>
    <nav>
        <%= link_to image_tag("add-to-basket.png", width:60), root_path %>
        <ul>
          <li>
            Cart
            <% if cart.present? %>
              <sup><%= cart.size %></sup>
              <ul>
                <% cart.each do |product| %>
                  <li>
                    <%= product.name %> <%= link_to '➖', cart_path(product), method: :delete %>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </li>
        </ul>
      </nav>
<% if flash[:notice] %>
        <p><%= flash[:notice] %></p>
      <% end %>
  <%= yield %>
  <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
        <details>
        <summary>
            Cart
            <% if cart.present? %>
              <sup><%= cart.size %></sup>
            <% end %>
        </summary>
        <% if cart.present? %>
          <ul>
            <% cart.each do |product| %>
              <li>
                <%= product.name %> <%= link_to '❌', cart_path(product), method: :delete %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p>No items in your cart.</p>
        <% end %>
      </details>
    <%= render partial: 'common/footer' %>



</section>
</body>
</html>
